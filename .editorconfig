# Version: 0.0.1 (Using https://semver.org/)
# EditorConfig is awesome: http://EditorConfig.org
# Updated: 2023-05-09
# Based on https://github.com/RehanSaeed/EditorConfig

##########################################
# Common Settings
##########################################

# This file is the top-most EditorConfig file
root = true

# All Files
[*]
charset = utf-8
indent_style = space
indent_size = 4
insert_final_newline = true
trim_trailing_whitespace = true

##########################################
# File Extension Settings
##########################################

# JSON Files
[*.{json,json5,webmanifest}]
indent_size = 2

# YAML Files
[*.{yml,yaml}]
indent_size = 2

# Makefiles
[Makefile]
indent_style = tab

# 4 space indentation
[*.{py,java,groovy,r,R}]
indent_style = space
indent_size = 4

[*.{md,txt}]
indent_style = space
indent_size = 4
trim_trailing_whitespace = false
